<Window x:Class="WordCounter.Presentation.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordCounter.Presentation.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350"  Width="525">
    <Grid>
        <Label x:Name="label" Content="Input Text" HorizontalAlignment="Left" Margin="21,5,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_content" AcceptsTab="True" AcceptsReturn="True"  HorizontalAlignment="Left" Height="98" Margin="21,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="btn_calculate" Content="Calculate" HorizontalAlignment="Left" Margin="21,137,0,0" VerticalAlignment="Top" MinWidth="75" Click="btn_calculate_Click"/>
        <Label x:Name="label1" Content="Calculation result" HorizontalAlignment="Left" Margin="21,164,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_result" IsEnabled="False" HorizontalAlignment="Left" Height="115" Margin="21,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MinWidth="476"/>
        
      

    </Grid>
</Window>
